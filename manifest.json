{
  "manifest_version": 3,
  "name": "Sito Greet",
  "version": "1.0.6",
  "license": "MPL-2.0",
  "description": "Shows a greeting with the given user's name and profile name on new tabs.",
  "browser_specific_settings": {
    "gecko": {
      "id": "@sito-greet.sito8943.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.open-meteo.com/*"
  ],
  "icons": {
    "48": "icon.png"
  }
}
